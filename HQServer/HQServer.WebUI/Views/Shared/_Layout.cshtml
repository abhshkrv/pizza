<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/offcanvas.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Highcharts-3.0.1/js/highcharts.js")" type="text/javascript"></script>
</head>
<style type="text/css">
    /* Move down content because we have a fixed navbar that is 50px tall */
    body {
        padding-top: 50px;
        padding-bottom: 20px;
    }
</style>
<body>
    <div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">CG3002 HyperMarket</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li ><a href="@Url.Action("../Admin/Index")">Home</a></li>
                    <li><a href="@Url.Action("../Home/About")">About</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Inventory<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <ul>
                                    <li class="dropdown-header">Productss</li>
                                    <li><a href="@Url.Action("../Admin/Index")">View all products</a></li>
                                    <li><a href="@Url.Action("../Admin/Search")">Search for product</a></li>
                                    <li class="divider"></li>
                                    <li class="dropdown-header">Manufacturers</li>
                                    <li><a href="@Url.Action("../Admin/ManufacturersList")">View all manufacturers</a></li>
                                    <li class="divider"></li>
                                    <li class="dropdown-header">Categories</li>
                                    <li><a href="@Url.Action("../Admin/CategoriesList")">View all categories</a></li>
                                </ul>
                            </li>
                           
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Outlets<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <ul>
                                    <li><a href="@Url.Action("../Shop/List")">View Outlet lists</a></li>
                                    <li><a href="@Url.Action("../Shop/ViewTransactionsForOutlet")">View transactions for outlet</a></li>
                                    <li><a href="@Url.Action("../Shop/ViewInventoryForOutlet")">View inventory for outlet</a></li>
                                </ul>
                            </li>

                        </ul>
                    </li>

                </ul>
                <form class="navbar-form navbar-right">
                    @Html.Partial("_LogOnPartial")
                </form>

            </div><!-- /.nav-collapse -->
        </div><!-- /.container -->
    </div>

    <div class="container">
        <div class="row row-offcanvas row-offcanvas-right">

            <!--/span-->

            <p class="pull-right visible-xs">
                <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
            </p>
            <p></p>
            @RenderBody()
            <!--/span-->
            <!--/row-->
            <!--/span-->
        </div>
        <!--/row-->

        <hr>



    </div>
    <!--/.container-->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="@Url.Content("~/Content/bootstrap.min.js")"></script>

</body>
</html>
