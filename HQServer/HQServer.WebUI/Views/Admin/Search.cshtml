@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>
<p>
    Please enter product name or barcode.
</p>
        @{
            if(TempData["results"] != null)
            {
                <div class="alert alert-danger">@TempData["results"] </div>
            }
        }
@using(Html.BeginForm("ProcessSearch","Admin",FormMethod.Get)) {
    <div>
        <fieldset>
            <legend>Search Information</legend>

            <div class="editor-label">
                @Html.Label("Name", "Name")
            </div>
            <div class="editor-field">
                @Html.Editor("name")
            </div>

            <div class="editor-label">
                @Html.Label("Barcode", "Barcode")
            </div>
            <div class="editor-field">
                @Html.Editor("barcode")
            </div>

            <p>
                <input type="submit" value="Search" />
            </p>
        </fieldset>
    </div>
}  